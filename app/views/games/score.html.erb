<div class="container d-inline-flex justify-content-center m-5">
  <div class="card p-3 justify-content-center">

    <div class="container d-inline-flex justify-content-center">
      <h1>RESULT</h1>
    </div>

    <div class="container d-inline-flex justify-content-center">
      <p><%= @message %></p>
    </div>

    <div class="d-flex justify-content-center">
      <form action="/new" method="get" data-turbo="false" class="d-grid gap-2">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <button type="submit" class="btn btn-primary">Play again</button>
        <%= hidden_field_tag :array, @letters %>
      </form>    </div>

  </div>
</div>
